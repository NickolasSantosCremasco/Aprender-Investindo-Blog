generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

// --- SEUS ARTIGOS ---
model Post {
  id        String   @id @default(cuid())
  title     String
  subtitle  String?
  content   String   @db.Text
  image_url String?
  slug      String   @unique
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- NOVO: USU√ÅRIOS (Para o cadastro funcionar) ---
model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String   
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}